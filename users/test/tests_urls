from django.test import SimpleTestCase
from users.views import *
from django.urls import reverse, resolve

class TestUrls(SimpleTestCase):
    def test_urls_report(self):
        url = reverse('report_news')
        view = resolve(url).func
        self.assertEquals(view, report_news)
        
    def test_urls_about(self):
        url = reverse('about_us')
        view = resolve(url).func
        self.assertEquals(view, about_us)
        
    def test_urls_contact(self):
          url = reverse('contact_us')
        view = resolve(url).func
        self.assertEquals(view, contact_us)
    
    def test_urls_account(self):
        url = reverse('account')
        view = resolve(url).func
        self.assertEquals(view, account)

